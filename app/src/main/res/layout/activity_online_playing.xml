<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".OnlinePlaying">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="20">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        app:srcCompat="@drawable/music" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="40">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">

        <com.example.jean.jcplayer.view.JcPlayerView
            android:id="@+id/jcplayer1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            app:text_audio_title_color="@color/teal_200" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="20" android:background="@color/black">
        <com.example.jean.jcplayer.view.JcPlayerView
            android:id="@+id/jcplayer2"
            android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_700"
        app:text_audio_title_color="@color/teal_200"
        app:seek_bar_color="@color/white"
        app:text_audio_current_duration_color="@color/white"
        app:text_audio_duration_color="@color/white" />
    </LinearLayout>
</LinearLayout>